<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mcdonalds" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/a1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainPage"
            android:label="@string/title_activity_main_page"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mcdonalds.LoginActivity" />
        </activity>
        <activity
            android:name=".signUp"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mcdonalds.LoginActivity" />
        </activity>
        <activity
            android:name=".signingup"
            android:label="@string/title_activity_signingup"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mcdonalds.LoginActivity" />
        </activity>
        <activity
            android:name=".place_order"
            android:label="@string/title_activity_place_order"
            android:parentActivityName=".mainPage"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mcdonalds.mainPage" />
        </activity>
        <activity
            android:name=".food"
            android:label="@string/title_activity_food"
            android:parentActivityName=".mainPage"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mcdonalds.mainPage" />
        </activity>
        <activity
            android:name=".contact"
            android:label="@string/title_activity_contact"
            android:parentActivityName=".mainPage"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mcdonalds.mainPage" />
        </activity>
        <activity
            android:name=".rate"
            android:label="@string/title_activity_rate"
            android:parentActivityName=".mainPage"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mcdonalds.mainPage" />
        </activity>
        <activity
            android:name=".bill"
            android:label="@string/title_activity_bill"
            android:parentActivityName=".place_order"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mcdonalds.place_order" />
        </activity>
    </application>

</manifest>
